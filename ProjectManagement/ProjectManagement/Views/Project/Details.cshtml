@model ProjectManagement.Models.Project

@{
    ViewData["Title"] = "Details";
}

<h1>Project Details</h1>
<hr />
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
    <dt class="col-sm-2">Start Date</dt>
    <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>
    <dt class="col-sm-2">Type</dt>
    <dd class="col-sm-10">@Model.Type</dd>
    <dt class="col-sm-2">Is Active</dt>
    <dd class="col-sm-10">@Model.IsActive</dd>
    <dt class="col-sm-2">Project Manager</dt>
    <dd class="col-sm-10">@Model.ProjectManager.FirstName</dd>
</dl>
<div>
    <a asp-action="Edit" asp-controller="Project" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
    <a asp-action="Index" asp-controller="Project" class="btn btn-info">Back to List</a>
</div>
