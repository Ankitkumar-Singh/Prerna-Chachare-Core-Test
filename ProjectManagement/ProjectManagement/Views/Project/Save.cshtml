@model ProjectManagement.Models.Project

@{
    ViewData["Title"] = "Save";
}

<div class="card py-5">
    <h1 class="text-center mb-3">Project</h1>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <form asp-action="Save" asp-controller="Project" id="projectForm" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label font-weight-bold"></label>
                    <input asp-for="Name" class="form-control" maxlength="100" />
                    <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label font-weight-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" maxlength="500"></textarea>
                    <span asp-validation-for="Description" class="text-danger font-weight-bold"></span>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="Type" class="control-label font-weight-bold col-md-12 pl-0"></label>
                        <label class="col-md-3"><input asp-for="Type" type="radio" value="Fixed" /> Fixed</label>
                        <label class="col-md-8"><input asp-for="Type" type="radio" value="Dedicated" /> Dedicated</label>
                        <span asp-validation-for="Type" class="text-danger font-weight-bold"></span>
                    </div>
                    <div class="form-group col-md-6 mt-4">
                        <label asp-for="IsActive" class="control-label font-weight-bold mr-2"></label>
                        <input type="checkbox" asp-for="IsActive" class=""/>

                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="StartDate" class="control-label font-weight-bold"></label>
                        <input asp-for="StartDate" class="form-control" min="2000-01-01" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="StartDate" class="text-danger font-weight-bold"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="ProjectManagerId" class="control-label font-weight-bold"></label>
                        <select asp-for="ProjectManagerId" class="form-control" asp-items="ViewBag.ProjectManagerId">
                            <option selected="selected" value="" disabled>Please Select Project Manager</option>
                        </select>
                        <span asp-validation-for="ProjectManagerId" class="text-danger font-weight-bold"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" id="btnSaveProject" />
                    <a asp-action="Index" asp-controller="Project" class="btn btn-danger">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>