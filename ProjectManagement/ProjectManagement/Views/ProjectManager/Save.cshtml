@model ProjectManagement.Models.ProjectManager
@using ProjectManagement.Models

@{
    ViewData["Title"] = "Save";
}

<div class="card py-5">
    <h1 class="text-center mb-3">Project Manager</h1>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <form asp-action="Save" asp-controller="ProjectManager" id="projectManagerForm" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="FirstName" class="control-label font-weight-bold"></label>
                        <input asp-for="FirstName" class="form-control" maxlength="20" />
                        <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="LastName" class="control-label font-weight-bold"></label>
                        <input asp-for="LastName" class="form-control" maxlength="20" />
                        <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label font-weight-bold"></label>
                    <textarea asp-for="Address" class="form-control" rows="3" maxlength="100"></textarea>
                    <span asp-validation-for="Address" class="text-danger font-weight-bold"></span>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="Email" class="control-label font-weight-bold"></label>
                        <input asp-for="Email" class="form-control" maxlength="30" />
                        <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Contact" class="control-label font-weight-bold"></label>
                        <input asp-for="Contact" class="form-control" type="number" maxlength="10" />
                        <span asp-validation-for="Contact" class="text-danger font-weight-bold"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="Gender" class="control-labe font-weight-bold col-md-12 pl-0"></label>
                        <label class="col-md-3"><input asp-for="Gender" type="radio" value="Male" /> Male</label>
                        <label class="col-md-8"><input asp-for="Gender" type="radio" value="Female" /> Female</label>
                        <span asp-validation-for="Gender" class="text-danger font-weight-bold"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Department" class="control-label font-weight-bold"></label>
                        <select asp-for="Department" class="form-control" asp-items="Html.GetEnumSelectList<Department>()">
                            <option selected="selected" value="" disabled>Please Select Department</option>
                        </select>
                        <span asp-validation-for="Department" class="text-danger font-weight-bold"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" id="btnSaveProjectManager" />
                    <a asp-action="Index" asp-controller="ProjectManager" class="btn btn-danger">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>