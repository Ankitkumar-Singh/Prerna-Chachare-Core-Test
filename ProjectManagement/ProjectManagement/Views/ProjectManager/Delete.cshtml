@model ProjectManagement.Models.ProjectManager

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-danger">Delete Project Manager</h1>
<h3 class="text-danger">Are you sure you want to delete this?</h3>
<hr />
<dl class="row">
    <dt class="col-sm-2">First Name</dt>
    <dd class="col-sm-10">@Model.FirstName</dd>
    <dt class="col-sm-2">Last Name</dt>
    <dd class="col-sm-10">@Model.LastName</dd>
    <dt class="col-sm-2">Address</dt>
    <dd class="col-sm-10">@Model.Address</dd>
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Contact</dt>
    <dd class="col-sm-10">@Model.Contact</dd>
    <dt class="col-sm-2">Gender</dt>
    <dd class="col-sm-10">@Model.Gender</dd>
    <dt class="col-sm-2">Department</dt>
    <dd class="col-sm-10">@Model.Department</dd>
</dl>

<form asp-action="Delete" asp-controller="ProjectManager" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" id="btnDelete" />
    <a asp-action="Index" asp-controller="ProjectManager" class="btn btn-info">Back to List</a>
</form>
